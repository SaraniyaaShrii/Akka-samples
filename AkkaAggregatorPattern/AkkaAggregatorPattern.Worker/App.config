<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="akka" type="Akka.Configuration.Hocon.AkkaConfigurationSection, Akka" />
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <appSettings>
    <add key="ActorSystemName" value="WorkerActorSystem1"/>
  </appSettings>
  <akka>
    <hocon>
      <![CDATA[
          akka {
          
            actor {
                provider = "Akka.Cluster.ClusterActorRefProvider, Akka.Cluster"
              
                deployment {
                    /FundActor 
                     {
                        #router = smallest-mailbox-pool 
                        #resizer 
                        #{
                        #    enabled = on
                        #    lower-bound = 3
                        #    upper-bound = 10
                        #    #messages-per-resize
                        #    #rampup-rate = 0.2  # Percentage to increase the pool size. The default is 0.2
                        #    #backoff-rate = 0.1  # Percentage to decrease the pool size. The default is 0.1
                        #    #pressure-threshold = 0 # 0 - the routee is busy and have no messages in the mailbox, 1 - busy and have at least 1 message waiting in the mailbox, N - the routee is busy and have N messages waiting in the mailbox (where N > 1)
                        #}
                        cluster 
                        {
                            enabled = on
                            allow-local-routees = on
                            use-role = Worker1
                            # max-nr-of-instances-per-node = 10
                        }
                    } #/FundActor
                } #deployment
            
            } #actor
            
            remote {
                log-remote-lifecycle-events = DEBUG
                log-received-messages = on

                helios.tcp {
                  transport-class = "Akka.Remote.Transport.Helios.HeliosTcpTransport, Akka.Remote"
                  hostname = "127.0.0.1"               
                  port = 0
                }
            }
            
            
            cluster {
                seed-nodes = ["akka.tcp://ClusterSystem@127.0.0.1:2553", "akka.tcp://ClusterSystem@127.0.0.1:2552"]
                roles = ["Worker1"]
                #auto-down-unreachable-after = 30s
            }
             
          }
      ]]>
    </hocon>
  </akka>

</configuration>